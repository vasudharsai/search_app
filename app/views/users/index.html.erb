<p id="notice"><%= notice %></p>

<div class="align-title">
  <h2>Select search attribute from below drop down</h2>


  <%= form_with(url: search_users_path, method: :get, local: true) do |f| %>

    <div style="margin-left: 180px;">
      <%= select_tag "select_attribute", options_for_select(@attributes) %>
      <%= f.text_field :q, id: :q %>
    </div>
    <br>

    <div class="actions" style="margin-left: 300px;">
      <%= f.submit 'Search', class: 'btn btn-primary' %>
    </div>
  <% end %>
</div>

<h3>Users</h3>

<table class="table table-striped table-bordered">
  <thead>
  <tr>
    <th>ID</th>
    <th>URL</th>
    <th>External ID</th>
    <th>Name</th>
    <th>Alias</th>
    <th>Locale</th>
    <th>Timezone</th>
    <th>Email</th>
    <th>Phone</th>
    <th>Role</th>
  </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user._id %></td>
        <td><%= user.url %></td>
        <td><%= user.external_id %></td>
        <td><%= user.name %></td>
        <td><%= user.alias %></td>
        <td><%= user.locale %></td>
        <td><%= user.timezone %></td>
        <td><%= user.email %></td>
        <td><%= user.phone %></td>
        <td><%= user.role %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= will_paginate @users, class: 'well' %>

<%= render :partial => 'shared/nav_links' %>


